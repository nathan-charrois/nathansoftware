{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "moduleResolution": "Node",
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["**/*.ts"]
}
