{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@server/*": ["./*"],
      "@shared/*": ["../shared/*"]
    },
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": [
    "**/*.ts"
  ]
}
